<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_medium"
        android:paddingBottom="@dimen/default_medium">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fonts_size_large"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Title: "
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsValueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_medium"
            android:textSize="@dimen/fonts_size_large"
            android:textColor="@color/colorPrimary"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detailsNameTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="value"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
