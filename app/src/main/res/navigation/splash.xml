<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_splash"
    app:startDestination="@id/splash_screen">

    <fragment
        android:id="@+id/splash_screen"
        android:name="com.sample.architecturecomponent.ui.fragments.splash.SplashFragment"
        android:label="splash_fragment"
        app:layout="@layout/fragment_splash">
        <action
            android:id="@+id/splash_to_main_action_screen"
            app:destination="@id/main_screen"
            />
    </fragment>

    <activity
        android:id="@+id/main_screen"
        android:name="com.sample.architecturecomponent.ui.activities.MainActivity"
        android:label="activity_main"
        app:layout="@layout/activity_main"
        />

</navigation>